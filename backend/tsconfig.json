{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "moduleResolution": "Node",
    "rootDir": "./src",
    "outDir": "./dist",

    /* Type Safety */
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Allow default imports like import express from 'express' */
    "allowSyntheticDefaultImports": true,

    /* Paths (optional but recommended) */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    /* Node.js settings */
    "types": ["node"],

    /* Incremental build */
    "incremental": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
